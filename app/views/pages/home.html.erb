<div class="video-container">
<%= video_tag("logofinal.mp4", autoplay: :autoplay, loop: :loop)%>
  <div class="video-container-content">
    <h1>Let's Curate</h1>
    <p>Put your art on the world's canvas!</p>
  </div>
</div>

<div class="container" height="400px" id="info">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-4 text-center">
        <%= image_tag "network.png", class: "icono" %>
        <h4>Join a collaboration that suits your needs.</h4>
      </div>
      <div class="col-md-4 text-center">
        <%= image_tag "teamwork.png", class: "icono" %>
        <h4>Put your ressources together and build an exhibition together.</h4>
      </div>
      <div class="col-md-4 text-center">
        <%= image_tag "fame.png", class: "icono" %>
        <h4>Enjoy your low-cost, risk-free exhibition and rise to fame!</h4>
      </div>
    </div>
  </div>
</div>
