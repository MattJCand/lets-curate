<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
    <h1>Create a new task</h1>
    <br>
    <%= simple_form_for [@team, @task] do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.submit "Create a task", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
