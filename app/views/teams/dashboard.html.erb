<% if @team.date != nil %>
  <h4>Date: <%= @team.date.strftime("%A %d %B") %></h4>
<% end %>


<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2">
  Pick a date
</button><div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
