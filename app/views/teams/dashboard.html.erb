      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">The perfect spot to reveal your art to the world !</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@team) do |f| %>
          <%= f.input :date %>
      </div>
      </div>
      <div class="modal-footer">
          <%= f.button :submit, "Save" %>
        <% end %>
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
        <!-- <button type="button" class="btn btn-primary">Save</button> -->
      </div>
    </div>
  </div>
</div>


<!-- Location -->
<h2>STEP 2 - Pick a location!</h2>

<% if @team.date != nil %>
  <h4>Location: <%= @team.location %></h4>
<% end %>


<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Pick a location
</button><div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Choose the date for your big night !</h4>
      </div>
      <div class="modal-body">
      <%= simple_form_for(@team) do |f| %>
        <%= f.input :location %>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, "Save" %>
      <% end %>
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
        <!-- <button type="button" class="btn btn-primary">Save</button> -->
      </div>
    </div>
  </div>
</div>

<!-- Task Manager -->
<h2>STEP 6 - Opening Night Checklist</h2>
<h4>List and keep track of all the things to do before your big night!</h4>

  <% if policy(@task).create? %>
   <%= link_to "Add a task", new_team_task_path(@team) %>
  <% end %>

  <% @team.tasks.each_with_index do |task, index| %>
    <p>
    <strong><%= index + 1 %>.
    <%= task.name %></strong>
    <p><%= task.description %></p>
    <% if policy(@task).create? %>
      <% if task.status? %>
        Done!
      <% else %>
        <%= link_to "Done", done_task_path(task) %>
      <% end %>
      <%= link_to "Modify task", edit_task_path(task) %>
      <%= link_to "Delete task", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      <% end %>
      </p>
  <% end %>


