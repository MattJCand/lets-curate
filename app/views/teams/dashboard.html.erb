<h1 style="text-align: center;">The <%= @team.title %> Dashboard</h1>

<div class="container">
  <div class="row">
    <section>
      <div class="wizard">
        <div class="wizard-inner">
          <div class="connecting-line"></div>
          <ul class="nav nav-tabs" role="tablist">

            <li role="presentation" class="active">
              <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
                <span class="round-tab">
                  <i class="glyphicon glyphicon-pencil"></i>
                </span>
              </a>
            </li>

            <li role="presentation" class="disabled">
              <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                <span class="round-tab">
                  <i class="glyphicon glyphicon-picture"></i>
                </span>
              </a>
            </li>
            <li role="presentation" class="disabled">
              <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
                <span class="round-tab">
                  <i class="glyphicon glyphicon-list"></i>
                </span>
              </a>
            </li>

            <li role="presentation" class="disabled">
              <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
                <span class="round-tab">
                  <i class="glyphicon glyphicon-ok"></i>
                </span>
              </a>
            </li>
          </ul>
        </div>

            <!-- <form role="form"> -->
        <div class="tab-content">
          <div class="tab-pane active" role="tabpanel" id="step1">

            <h1 class="titletab">Your exhibit infos</h1>
                      <!-- PICK A DATE -->
              <p class="dashboard-description">The best date for your big night !</p>
              <% if @team.date != nil %>
                <h4>Date: <%= @team.date.strftime("%A %d %B") %></h4>
              <% end %>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2">
              Pick a date
            </button>
            <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Pick your date</h4>
                  </div>
                    <%= simple_form_for(@team) do |f| %>
                  <div class="modal-body">
                      <%= f.input :date %>
                  </div>
                  <div class="modal-footer">
                      <%= f.button :submit, "Save" %>
                    <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
                    <!-- <button type="button" class="btn btn-primary">Save</button> -->
                  </div>
                    <% end %>
                </div>
              </div>
            </div>

            <!-- LOCATION -->
            <h4>Location: </h4>
            <p class="dashboard-description">The perfect spot to reveal your art to the world !</p>
            <% if @team.location != nil %>
              <h5>Address: <%= @team.location %></h5>
            <% end %>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
              Pick a location
            </button>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"> Pick your location</h4>
                  </div>
                  <div class="modal-body">
                    <%= simple_form_for(@team) do |f| %>
                      <%= f.input :location %>
                  </div>
                  <div class="modal-footer">
                      <%= f.button :submit, "Save" %>
                    <% end %>
                    <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
                    <!-- <button type="button" class="btn btn-primary">Save</button> -->
                  </div>
                </div>
              </div>
            </div>

          <!-- NAME EXHIBIT -->
            <h4>Exhibit Name: </h4>
            <p class="dashboard-description">A relevant name for your exhibit !</p>
            <% if @team.title != nil %>
              <h5><%= @team.title %></h5>
            <% end %>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal3">
              Pick a name
            </button>
            <div class="modal fade" id="myModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Choose the name of your exhibit</h4>
                  </div>
                  <div class="modal-body">
                    <%= simple_form_for(@team) do |f| %>
                      <%= f.input :title %>
                  </div>
                  <div class="modal-footer">
                      <%= f.button :submit, "Save" %>
                    <% end %>
                    <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
                    <!-- <button type="button" class="btn btn-primary">Save</button> -->
                  </div>
                </div>
              </div>
            </div>

          <!-- THEME EXHIBIT -->
            <h4>Exhibit Theme: </h4>
            <p class="dashboard-description">What it's all about !</p>
            <% if @team.theme != nil %>
              <h5><%= @team.theme %></h5>
            <% end %>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal4">
              Pick a theme
            </button>
            <div class="modal fade" id="myModal4" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Choose the theme of your exhibit</h4>
                  </div>
                  <div class="modal-body">
                    <%= simple_form_for(@team) do |f| %>
                      <%= f.input :theme %>
                  </div>
                  <div class="modal-footer">
                      <%= f.button :submit, "Save" %>
                    <% end %>
                    <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
                    <!-- <button type="button" class="btn btn-primary">Save</button> -->
                  </div>
                </div>
              </div>
            </div>

            <ul class="list-inline pull-right">
                <li>
                  <div class="center">
                    <button class="next-step btndash">
                      <div class="button__outline"></div>
                      <div class="button__background"></div>
                      <div class="button__text">Save and continue</div>
                    </button>
                  </div>
                </li>
            </ul>
          </div>
          <div class="tab-pane" role="tabpanel" id="step2">
            <h1 class="titletab">Your poster</h1>
            <p class="dashboard-description">What will be the best image to present your event ?</p>
            <ul class="list-inline pull-right">
              <li><button type="button" class="btn btn-default prev-step">Previous</button></li>
              <li><div class="center">
                    <button class="next-step btndash">
                      <div class="button__outline"></div>
                      <div class="button__background"></div>
                      <div class="button__text">Save and continue</div>
                    </button>
                  </div></li>
            </ul>
          </div>
          <div class="tab-pane" role="tabpanel" id="step3">

            <h1 class="titletab">Your task manager</h1>

                        <!-- TASK MANAGER -->
              <% if policy(@task).create? %>
                 <%= link_to "Add a task", new_team_task_path(@team) %>
              <% end %>

              <% @team.tasks.each_with_index do |task, index| %>
                <p>
                <strong><%= index + 1 %>.
                <%= task.name %></strong>
                <p><%= task.description %></p>
                <% if policy(@task).create? %>
                  <% if task.status? %>
                    Done!
                  <% else %>
                    <%= link_to "Done", done_task_path(task) %>
                  <% end %>
                  <%= link_to "Modify task", edit_task_path(task) %>
                  <%= link_to "Delete task", task_path(task),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
                  <% end %>
                  </p>
              <% end %>

            <ul class="list-inline pull-right">
                <li><button type="button" class="btn btn-default prev-step">Previous</button></li>
                <li><button type="button" class="btn btn-default next-step">Skip</button></li>
                <li><div class="center">
                    <button class="next-step btndash">
                      <div class="button__outline"></div>
                      <div class="button__background"></div>
                      <div class="button__text">Save and continue</div>
                    </button>
                  </div></li>
            </ul>
          </div>
          <div class="tab-pane" role="tabpanel" id="complete">
              <h1 class="titletab">Complete!</h1>
              <p id="complete-dash">You're all done, you have successfully completed all steps.</p>
          </div>
          <div class="clearfix"></div>
        </div><!-- </form> -->
      </div>
    </section>
  </div>
</div>



<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyDPP-NYzVfGiWV2Gj2_mPFLxONBE1iekvY"></script>
<% end %>



