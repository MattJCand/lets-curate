<div class="mainteam">
<div class="movie-card" id="bckgrnd-color">
  <div class="container" id="container-user">
    <div class="banner" id="banner-height" style="background-image:linear-gradient(rgba(0,0,0,0) 71%, rgba(0,0,0, .53)), url('<%= cl_image_path(@team.photo.path) %>');">
    </div> <!-- end banner -->
    <div class="details" id="details-show-team">
      <div class="title3">
      <h1 id="user-profile-name"><%= @team.title %></h1>
        <span><%= @team.location %></span>
      </div>
      <div class="title2"><%= @team.budget %>  â‚¬</div>
    </div> <!-- end details -->
  </div> <!-- end container -->


  <div class="container" id="top-space-show-user">
    <div class="row">
      <div class="col-md-3 text-center">
      <br>
        <div class="row">
          <div class="col-md-12 avatars">
            <h4>Team Members</h4>
            <a href="#" data-tooltip="GET PIC Person 1" data-placement="top">
              <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/hobbit_avatar1.png" alt="avatar1" />
            </a>
            <a href="#" data-tooltip="GET PIC Person 2" data-placement="top">
              <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/hobbit_avatar2.png" alt="avatar2" />
            </a>
            <a href="#" data-tooltip="GET PIC Person 3" data-placement="top">
              <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/hobbit_avatar3.png" alt="avatar3" />
            </a>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
          <br>
          <h4>Themes :</h4>
          <span class="tag"><%= @team.theme %></span>
          <span class="tag">abstract</span>
          <span class="tag">imaginary</span>
          <h4> Types of art: </h4>
          <span class="tag"><%= @team.art_types %></span>
          </div>
        </div>
        <% if policy(Team).update? %>
        <div id="edit">
          <button class="btn btn-primary" id="edit-button"><%= link_to "Edit Team", edit_team_path(@team)%></button>
        </div>
        <% end %>
      </div>

      <div class="col-md-6">
        <h2 id="title-description-show-team">Collaboration details:</h2>
        <p id="description-show-team"> <%= @team.description %></p>
      </div>

      <div class="col-md-3">
<br> <br>
        <div id="side-card"><!-- div of 2 divs -->
          <div class="row">  <!-- row-condensed space-3 -->
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-6" id="no-padding-right">
                  <div class="row">
                    <div class="col-md-12">
                      <h5 class="date-space">Start date</h5>
                    </div>
                    <div class="col-md-12">
                      <h5 id="date-box-no-right-show-team">14/07/2017</h5>
                    </div>
                  </div>
                </div>
                <div class="col-md-6" id="no-padding-left">
                  <div class="row">
                    <div class="col-md-12">
                      <h5 class="date-space">End date</h5>
                    </div>
                    <div class="col-md-12">
                      <h5 id="date-box-no-left-show-team">23/07/2017</h5>
                    </div>
                  </div>
                </div>
              </div>
            </div><!-- end first div -->

            <div class="row">
              <div class="col-md-12">
                <div class="row">
                  <div class="col-md-12">
                    <h5>Address:</h5>
                  </div>
                  <div class="col-md-12">
                    <h5 id="address-box">16 Villa Gaudelet</h5>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div><!-- end of 1rst div -->

        <div>
          <div class="panel space-top-6 space-md-3 text-center">
            <div id="join-team-show">
              <button class="btn btn-primary"> <%= link_to "Join the team", new_team_member_path(@team) %></button>
            </div>
            <br>
           <div>
             <p><a href="#">Share this event</a></p>
           </div>
          </div>
        </div><!-- end div of 2 divs -->

      </div>
    </div>
  </div>
<!-- end movie-card -->



