<div class="movie-card">
  <div class="container">
    <div id="banner">
      <%= cl_image_tag @team.photo.path %>
    </div> <!-- end banner -->
      <div class="details">
        <div class="title1">
        <p id="user-profile-name">NAME OF EXPO</p>
          <span>CITY OF EXPO</span>
        </div>
        <div class="title2">SOMETHING</div>
      </div> <!-- end details -->

    <div id="edit">
      <p>EDIT</p>
      <%#= link_to "Edit EXPO", edit_user_path(@user) %>
    </div>

    <div id= "join">
    <p>JOIN</p>
      <%#= link_to "Join the team" %>
    </div>

    <div class="content-userprofile">

      <div class="column1-marge">
        <span class="tag">ART TYPE OF EXPO</span>
        <span class="tag">fantasy</span>
        <span class="tag">couleurs</span>
      </div> <!-- end column1 -->

      <div class="column2">
        <p>EXPO DESCRIPTION</p>

        <div class="avatars">
          <a href="#" data-tooltip="GET PIC Person 1" data-placement="top">
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/hobbit_avatar1.png" alt="avatar1" />
          </a>
          <a href="#" data-tooltip="GET PIC Person 2" data-placement="top">
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/hobbit_avatar2.png" alt="avatar2" />
          </a>
          <a href="#" data-tooltip="GET PIC Person 3" data-placement="top">
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/hobbit_avatar3.png" alt="avatar3" />
          </a>
        </div>
        <!-- end avatars -->

      </div> <!-- end column2 -->
    </div> <!-- end content-userprofile -->


  </div> <!-- end container -->
</div> <!-- end movie-card -->



