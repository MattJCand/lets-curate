<div>
<div class="navbar-wagon navbar-wagon-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logoo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <ul class="nav nav-pills pull-left">
              <li>
                <%= link_to "#info", class: 'become_curator scrollspecial' do %>
                  <%= t(".profile", default: "How it works") %>
                <% end %>
              </li>
              <li>
                <%= link_to "#", class: 'become_curator' do %>
                  <%= t(".profile", default: "Artists") %>
                <% end %>
              </li>
              <li>
                <%= link_to teams_path, class: 'become_curator' do %>
                  <%= t(".profile", default: "Find a team") %>
                <% end %>
              </li>
              <li>
              <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
              <div class="badge-container">
                <i class="fa fa-envelope-o"></i>
                <div class="badge badge-blue">3</div>
              </div>
            <% end %>
            </li>
            <li>
            <!-- Profile picture and dropdown -->
            <div class="navbar-wagon-item">
              <div class="dropdown">
                <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
                <%= image_tag avatar_url, class: "avatar-large dropdown-toggle", id: "navbar-wagon-menu", data: { toggle:"dropdown" } %>
                <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                  <li>
                  <%= link_to "Profile", user_path(current_user) %>
                  </li>
                  <li><a href="#">Dashboard</a></li>
                  <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= t(".sign_out", default: "Log Out") %>
                  <% end %>
                  </li>
                </ul>
              </div>
            </div>
            </li>
            </ul>
        </div>
      </div>

    <% else %>
      <div class="navbar-wagon-item">
            <ul class="nav nav-pills pull-left">
              <li>
                <%= link_to "#", class: 'become_curator' do %>
                  <%= t(".profile", default: "Artists") %>
                <% end %>
              </li>
              <li>
                <%= link_to teams_path, class: 'become_curator' do %>
                  <%= t(".profile", default: "Find a team") %>
                <% end %>
              </li>
              <li>
                  <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: 'become_curator' %>
              </li>
            </ul>
          </div>

        </div>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class=" navbar-wagon-item col-xs-12 hidden-sm hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Profile</a></li>
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Log out</a></li>
      </ul>
    </div>
  </div>
</div>

